<h1>WELCOME TO THE GOSSIPS CENTER</h1>

  <% @gossips.each do |gossip_object| %>

    <div class="card" style="width: 18rem;">
      <div class="card-body">
        <h5 class="card-title">AUTHOR : 
        <% @user_first_name = @users.find(gossip_object.user_id) %>
        <%= @user_first_name.first_name %></h5>
        <p class="card-text"><%= gossip_object.title %></p>
        <%= link_to "Go to this Gossip Page", gossip_path(id: gossip_object.id), :class => "btn btn-primary" %><br /><br />
        <%= link_to "Go to this User Page", user_id_path(id: gossip_object.user_id), :class => "btn btn-primary" %><br /><br />
        <%= link_to "Create a New Gossip", new_gossip_path, :class => "btn btn-primary" %>
      </div>
    </div>
    
  <% end %>

